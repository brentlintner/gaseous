#! /bin/sh

if ! which node; then
  mkdir ~/local
  echo 'export PATH=$HOME/local/bin:$PATH' >> ~/.bashrc
  git clone -o master git://github.com/ry/node.git
  cd node
  ./configure --prefix=~/local
  make install
  cd ..
  rm -rf node
fi

if ! which npm; then
  git clone -o master git://github.com/isaacs/npm.git
  cd npm
  make install
  cd ..
  rm -rf npm
fi

git submodule init
git submodule update
npm install jake nodeunit sinon catchjs glob argsparser
